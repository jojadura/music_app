<section class="wrap">
	<div class="container">
		<div class="row">
			<div class="col-sm-10">
				<h1><%= @artist.name %></h1>				
				<h3>Albums <%= "(" + @artist.albums.count.to_s + ")"  %></h3>
				<% @artist.albums.each do |album| %>
					<div class="col-sm-3">
						<div class="thumbnail">
						  <img src=<%= album.image_url %> alt="...">
     					  <h5><%= album.name %></h5>
     					  <h5><%= album.released_at %></h5>
					    </div>
					</div>
			    <% end %>

			</div>

			<div class="col-sm-2">
				<div class="thumbnail">
				  <img src=<%= @artist.image_url %> alt="...">
			    </div>

			</div>

		</div> <!-- .row-->
	</div> <!-- .container-->





</section>